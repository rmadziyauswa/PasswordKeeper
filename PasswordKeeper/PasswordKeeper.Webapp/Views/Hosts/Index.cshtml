@model IEnumerable<PasswordKeeper.Webapp.Models.EntityModel.Host>

@{
    ViewBag.Title = "Hosts";
}

<h2>Hosts</h2>

<div>
    <div class="col-md-3">
        @Html.ActionLink("Create New", "Create")
    </div>
    <div class="col-md-3">
        <a href="@Url.Action("Index")">
            <i class="icon-refresh"></i>
        </a>
    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("Search", "Hosts", FormMethod.Post))
        {
            <input id="filter" name="filter" type="text" />
            <input type="submit" value="Search" name="btnSubmit" id="btnSubmit" class="btn btn-success" />
        }
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HostType.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Details", new {id = item.ID})">
                @Html.DisplayFor(modelItem => item.Name)
            </a>
        </td>
        <td>
            <a href="@Url.Action("Details", "HostTypes", new {id = item.HostTypeID})">
                @Html.DisplayFor(modelItem => item.HostType.Name)
            </a>
        </td>
        <td>
            <a title="Edit" href="@Url.Action("Edit", new { id=item.ID})"><i class="icon-pencil"></i></a>
             |
            <a title="View Credentials" href="@Url.Action("GetByHost","Credentials", new { id=item.ID})"><i class="icon-eye-open"></i></a>
             |
            <a title="Delete" href="@Url.Action("Delete", new { id=item.ID})"><i class="icon-trash"></i></a>
        </td>
    </tr>
}

</table>
