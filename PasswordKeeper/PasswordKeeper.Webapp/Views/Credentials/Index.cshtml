@model IEnumerable<PasswordKeeper.Webapp.Models.EntityModel.Credential>

@{
    ViewBag.Title = "Index";
}

<h2>Credentials</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CredentialType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Host.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Details", new { id = item.ID})">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                <a href="@Url.Action("Details","CredentialTypes", new { id = item.CredentialTypeID})">
                    @Html.DisplayFor(modelItem => item.CredentialType.Name)
                </a>
            </td>
            <td>
                <a href="@Url.Action("Details","Hosts", new { id = item.HostID})">
                    @Html.DisplayFor(modelItem => item.Host.Name)
                </a>
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.ID})"><i class="icon-pencil"></i></a>
                |
                <a href="@Url.Action("Delete", new { id = item.ID})"><i class="icon-trash"></i></a>
            </td>
        </tr>
    }

</table>
